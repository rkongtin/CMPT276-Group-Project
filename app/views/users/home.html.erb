<h1 class="drop-down">Select your School:</h1>

<!-- area below is for the form elements/fields //-->
<%= form_for @user do |f| %>
    <div class="drop-down">
        <%= f.collection_select(:id, School.all, :id, :name) %>
        <%= link_to 'GO', map_user_path, class: "btn-primary" %>
    </div>
<% end %>
