<% if @user.errors.any? %> <!-- if any errors, display them here //-->
    <div id="error_explanation">
        <h2>
            <%= pluralize(@user.errors.count, "error") %> prohibited
            this data from being saved:
        </h2>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<!-- area below is for the form elements/fields //-->
<%= form_for @user, :url => changePassword_update_user_path(@user) do |f| %>
    <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <div>
        <%= f.submit "Submit", class: "btn btn-primary" %>
        <%= link_to "Back", settings_user_path(@user), class: "btn btn-primary" %>
    </div>
<% end %>
