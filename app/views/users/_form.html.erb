<% if @user.errors.any? %> <!-- if there are any errors, use this space to show them, please look up a tutorial to explaing this better //-->
    <div id="error_explanation">
        <h2>
            <%= pluralize(@user.errors.count, "error") %> prohibited
            this data from being saved:
        </h2>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>
        
<!-- area below is for the form elements/fields //-->
<%= form_for @user do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name, :required => true, :class => 'input' %>
    </p>
    <p>
        <%= f.label :email %>
        <%= f.email_field :email, :required => true, :class => 'input' %>
    </p>
    <p>
        <%= f.label :password %>
        <%= f.password_field :password, :required => true, :minlength => '6', :class => 'input' %>
    </p>
    <p>
        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation, :required => true, :minlength => '6', :class => 'input' %>
    </p>
    <p>
        <%= f.submit "Submit", class: "btn btn-primary" %>
    </p>
<% end %>
