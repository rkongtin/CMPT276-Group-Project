<html>
    <body>
        <h1>Listing All Schools [Admin's Only]</h1>
        <%= link_to 'New School', new_school_path, class: "btn-primary" %><br /><br />
        <table> <!-- create a table with the top row saying "Name     Adddress      Latitude      Longitude      Options", and other rows having each schools info or a link to show, edit or delete //-->
            <tr>
                <th class="BorderDraw">Name</th>
                <th class="BorderDraw">Address</th>
                <th class="BorderDraw">Latitude</th>
                <th class="BorderDraw">Longitude</th>
                <th colspan="3" style="text-align: center;">Options</th> <!-- in the table, have options display in the middle of a 3-column length column //-->
            </tr>
            <% @schools.each do |school| %>
            <tr>
                <td><%= school.name %></td>
                <td><%= school.address %></td>
                <td><%= school.lat %></td>
                <td><%= school.long %></td>
                <td><%= link_to 'Show', school_path(school), class: "btn-primary" %></td>
                <td><%= link_to 'Edit', edit_school_path(school), class: "btn-primary" %></td>
                <td><%= link_to 'Delete', school_path(school), class: "btn-primary",
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td> <!-- allow deletion of school, and put confirmation on it //-->
            </tr>
            <% end %>
        </table>
        <br />
        <%= link_to 'Back To Home', home_user_path(current_user), class: "btn-primary" %>
    </body>
</html>
