<%= form_for @school do |f| %>
 <!-- if any errors, display them here //-->
  <% if @school.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@school.errors.count, "error") %> prohibited
        this data from being saved:
      </h2>
      <ul>
        <% @school.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </p>
  
  <a href="http://www.latlong.net/">Look at Longitude and Latitude</a>
  
  <p>
    <%= f.label :lat %><br>
    <%= f.text_field :lat %>
  </p>
  
  <p>
    <%= f.label :long %><br>
    <%= f.text_field :long %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
